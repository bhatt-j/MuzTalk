<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    app:errorEnabled="true"
    android:background="@drawable/grad_background">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="249dp"
        android:layout_height="281dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/welcome1"
        android:textColor="#5C5C5C"
        android:textSize="40sp"
        android:layout_marginLeft="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginStart="12dp" />

    <EditText
        android:id="@+id/v_email_login"
        android:layout_width="340dp"
        android:layout_height="59dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="?attr/textColor"
        android:textStyle="bold"
        android:hint="@string/Email"
        android:layout_marginLeft="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="TextFields"
        android:autofillHints=""
        android:layout_marginStart="12dp" />

    <EditText
        android:id="@+id/v_passwordlogin"
        android:layout_width="340dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:ems="10"
        android:hint="@string/password"
        android:textColor="?attr/textColor"
        android:textStyle="bold"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_email_login"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/a_loginbutton"
        android:layout_width="340dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:text="@string/Log_in"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:background="?attr/buttonColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_passwordlogin"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/a_forget_password"
        android:layout_width="178dp"
        android:layout_height="26dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/forget_password"
        android:textColor="?attr/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_loginbutton"
        android:layout_marginStart="12dp" />
    <TextView
        android:id="@+id/a_newuser"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="239dp"
        android:layout_height="46dp"
        android:text="@string/new_user"
        android:textColor="#FA5FAF"
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toEndOf="@+id/a_loginbutton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.834" />




</LinearLayout>