<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomActivity"
    android:background="?attr/backgroundColor"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="550dp"
            app:srcCompat="@drawable/bckground2" />

        <ImageView
            android:id="@+id/a_speakers"
            android:layout_width="66dp"
            android:layout_height="94dp"
            android:layout_marginTop="136dp"
            android:layout_marginLeft="310dp"
            app:srcCompat="@drawable/speakers" />


        <ImageView
            android:id="@+id/a_globe"
            android:layout_width="77dp"
            android:layout_height="62dp"
            android:layout_marginTop="166dp"
            app:srcCompat="@drawable/globe" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="92dp"
            android:layout_height="114dp"
            android:layout_marginTop="310dp"
            app:srcCompat="@drawable/smartphone" />

        <ImageView
            android:id="@+id/a_youtube"
            android:layout_width="123dp"
            android:layout_height="103dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="130dp"
            app:srcCompat="@drawable/yt" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <TextView
            android:id="@+id/room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_room1"
            android:textColor="?attr/textColor"
            android:textSize="30sp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/room_camera"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/photo_camera_icon"
            app:tint="?attr/textColor"
            tools:ignore="VectorDrawableCompat" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>